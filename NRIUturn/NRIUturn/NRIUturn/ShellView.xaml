                    <TextBlock Foreground="DarkBlue">
                        <Run Text="Hi,"/>
                        <Run Text="{Binding Path=User.UserName}"/>
                    </TextBlock>
                    <HyperlinkButton x:Name="Logout" Content="Logout" Margin="10,0,0,0" HorizontalAlignment="Right" Foreground="DarkBlue"/>
